{
  "name": "jira",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.3.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-query": "^1.2.9",
    "antd": "^4.16.13",
    "craco-less": "^1.20.0",
    "dayjs": "^1.10.7",
    "history": "^5.0.1",
    "jira-dev-tool": "^1.6.59",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.4",
    "react-router": "^6.0.0-beta.8",
    "react-router-dom": "^6.0.0-beta.8",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  },
  "commitlint": {
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "issuePrefixes": [
          "PROJ-"
        ]
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/qs": "^6.9.7",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@welldone-software/why-did-you-render": "^6.2.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "json-server": "^0.16.3",
    "lint-staged": "^11.1.2",
    "msw": "^0.36.3",
    "prettier": "2.4.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
